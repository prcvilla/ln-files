syn on
set bg=dark
set mouse=a
set nocompatible
set backspace=indent,eol,start
set nobackup
set nowrap
set title
set titlestring=\%f\ \(vim\) titlelen=70

set listchars=tab:\|.,trail:.
set tabstop=4
set shiftwidth=4
set list
set smartindent
"hi cpp ctermfg=lightgreen
"match cpp /\<string\|cin\|cout\>/

set backupdir=~/.vimbkp//
set dir=~/.vimswp//

map <F8> :set hls!<CR>
map <F12> :q!<CR>
